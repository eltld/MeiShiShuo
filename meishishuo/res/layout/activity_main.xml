
 <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ngu.meishishuo.activity.MainActivity">

    <!-- 内容 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >  
		<FrameLayout
	       android:id="@+id/main_content"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:layout_above="@+id/radiogroup_bottom">
		</FrameLayout>
		<!-- 底部标签 -->
		<RadioGroup
	        android:id="@+id/radiogroup_bottom"
	        android:layout_width="match_parent"  
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:gravity="center"
	        android:orientation="horizontal" >  
	        <RadioButton
	            android:id="@+id/rb_everyday"
	            style="@style/myRadioGroupStyle"
	            android:padding="10dp"
	            android:gravity="center"
	           	android:checked="true"
	           	android:background="@color/blue"
	            android:text="精选" />
	        <RadioButton
	            android:id="@+id/rb_find"
	            style="@style/myRadioGroupStyle"
	            android:padding="10dp"
	            android:gravity="center"
	            android:background="@color/blue"
	            android:text="发现" />
	        <RadioButton
	            android:id="@+id/rb_rank"
	            style="@style/myRadioGroupStyle"
	            android:padding="10dp"
	            android:gravity="center"
	            android:background="@color/blue"
	            android:text="排行" />
    	</RadioGroup> 
	</RelativeLayout>
	
	<!-- 抽屉菜单 -->
    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginRight="40dp"
        style="@style/drawer_background_style"
        >
        <RelativeLayout 
        	android:id="@+id/rl_head"
        	android:layout_width="match_parent"
        	android:layout_height="100dp"
        	android:padding="10dp"
        	android:background="@drawable/btn_selector"
        	android:clickable="true">
		 		<ImageView
			        android:id="@+id/iv_head"
			        android:layout_width="80dp"
	        		android:layout_height="100dp"
	        		android:layout_centerVertical="true"
	        		android:src="@drawable/menu_head"
			        />
			     <TextView
			         android:id="@+id/tv_head"
			         android:layout_marginLeft="10dp"
			         android:layout_width="match_parent"
	        		 android:layout_height="wrap_content"
					 android:layout_toRightOf="@id/iv_head"
      				 android:layout_centerVertical="true"
	        		 style="@style/drawer_text_style"
	        		 android:text="@string/LeftMenu_LoginHead"
			         /> 
		</RelativeLayout>
        <ListView
            android:id="@+id/left_listview"
            android:layout_below="@id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
    		android:choiceMode="singleChoice" 
   			style="@style/drawer_background_style"
   			android:dividerHeight="2dp" 
   			android:divider="@color/white"
            >
        </ListView>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
