<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
     >

    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_layout_shape"
         >
        <!-- 上圆角-->
       <LinearLayout
        	android:background="@drawable/top_layout_selector"
        	android:orientation="horizontal"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingLeft="12dp"
        	android:paddingRight="12dp"
        	android:paddingTop="4dp"
        	android:paddingBottom="4dp"
        	android:gravity="center_vertical"
        	android:clickable="true"
        	android:focusable="true"
        	>
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:textSize="18sp"
		    android:textColor="@color/black"
		    android:text="@string/settings_image" />
		 <ToggleButton
		    android:id="@+id/setting_noimage_tg"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/togglebutton_selector"
		    android:checked="false" 
		    android:textOff=""
		    android:textOn=""
		    android:minWidth="40dp"
            android:minHeight="24dp"/>
	</LinearLayout>
		<!-- 分割线 -->
         <View 
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/background"/>
        
          <!-- 无圆角-->
       <LinearLayout
            android:id="@+id/setting_cache_ll"
            android:background="@drawable/mid_layout_selector"
        	android:orientation="horizontal"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingLeft="12dp"
        	android:paddingRight="12dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:gravity="center_vertical"
        	android:clickable="true"
        	android:focusable="true">
		 
  			<TextView 
  			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"
		    	android:textSize="18sp"
		    	android:textColor="@color/black"
		    	android:text="清除缓存" />
            
          	<ImageView  
          	    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_arrow"/>
        </LinearLayout>
       <!-- 分割线 -->  
       <View android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/background"/>
       
       <!-- 下圆角-->
       <LinearLayout
            android:id="@+id/setting_feedback_ll"
            android:background="@drawable/bottom_layout_selector"
        	android:orientation="horizontal"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingLeft="12dp"
        	android:paddingRight="12dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:gravity="center_vertical"
        	android:clickable="true"
        	android:focusable="true">
            <TextView 
                android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"
		    	android:textSize="18sp"
		    	android:textColor="@color/black" 
		    	android:text="意见反馈" />
            
          	<ImageView  
          	    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_arrow"/>
        </LinearLayout>
             
    </LinearLayout>

    
     <!-- 全圆角-->
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_layout_shape">
        <LinearLayout
            android:id="@+id/setting_about_ll"
        	android:orientation="horizontal"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingLeft="12dp"
        	android:paddingRight="12dp"
        	android:paddingTop="12dp"
        	android:paddingBottom="12dp"
        	android:gravity="center_vertical"
        	android:clickable="true"
        	android:focusable="true"
            android:background="@drawable/single_layout_selector">
          	
            <TextView 
                android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"
		    	android:textSize="18sp"
		    	android:textColor="@color/black"
		     	android:text="关于"/>
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_arrow"
                />"
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>